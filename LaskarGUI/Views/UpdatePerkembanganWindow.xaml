<Window x:Class="LaskarGUI.Views.UpdatePerkembanganWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Catatan Perkembangan"
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Update Catatan" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

            <TextBlock Text="Nama Siswa:"/>
            <TextBox Text="{Binding NamaSiswa}"/>

            <TextBlock Text="Nomor Induk:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding NomorInduk}"/>

            <TextBlock Text="Kelas:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Kelas}"/>

            <TextBlock Text="Semester:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Semester}"/>

            <TextBlock Text="Tahun Ajaran:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding TahunAjaran}"/>

            <TextBlock Text="Nilai Agama:"/>
            <TextBox Text="{Binding NilaiAgama}"
   AcceptsReturn="True"
   TextWrapping="Wrap"
   Height="80"
   VerticalScrollBarVisibility="Auto"/>


            <TextBlock Text="Jati Diri:"/>
            <TextBox Text="{Binding JatiDiri}"
AcceptsReturn="True"
TextWrapping="Wrap"
Height="80"
VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Literasi dan STEM:"/>
            <TextBox Text="{Binding Literasi}"
AcceptsReturn="True"
TextWrapping="Wrap"
Height="80"
VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="P5 (Pancasila):"/>
            <TextBox Text="{Binding P5}"
AcceptsReturn="True"
TextWrapping="Wrap"
Height="80"
VerticalScrollBarVisibility="Auto"/>

            <Button Content="Update" Width="100" HorizontalAlignment="Right" Background="Green" 
Foreground="White" Margin="0,20,0,0" Click="Update_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
